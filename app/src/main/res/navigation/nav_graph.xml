<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.qadomy.tectalk.fragments.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/ARselfieFragment"
        android:name="com.qadomy.tectalk.fragments.ar_selfie_fragment.ARselfieFragment"
        android:label="a_rselfie_fragment"
        tools:layout="@layout/a_rselfie_fragment" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.qadomy.tectalk.fragments.chat_fragment.ChatFragment"
        android:label="chat_fragment"
        tools:layout="@layout/chat_fragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.qadomy.tectalk.fragments.profile.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_fragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.qadomy.tectalk.fragments.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.qadomy.tectalk.fragments.home_group.GroupFragment"
        android:label="group_fragment"
        tools:layout="@layout/group_fragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.qadomy.tectalk.fragments.register.SignUpFragment"
        android:label="@string/sign_up"
        tools:layout="@layout/sign_up_fragment">
        <action
            android:id="@+id/action_signUpFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
</navigation>